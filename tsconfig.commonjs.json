{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib/commonjs",
    "module": "CommonJS",
    "target": "ES2018",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**/*",
    "plugin"
  ]
}